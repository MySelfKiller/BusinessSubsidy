<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderDetailActivity">

    <include layout="@layout/titlebar_white"
        android:id="@+id/order_detail_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/order_detail_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/order_detail_title"
        app:layout_constraintBottom_toTopOf="@id/order_detail_customer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            app:srlAccentColor="@color/black"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlPrimaryColor="@color/transparent" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/order_detail_empty"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="@dimen/dp_100"
                    android:layout_height="@dimen/dp_150"
                    android:src="@mipmap/empty_view"/>
                <LinearLayout
                    android:id="@+id/order_detail_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_15"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/id_order_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单信息"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/order_detail_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="进度查询"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/colorAccent"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingBottom="@dimen/dp_3"
                            android:paddingHorizontal="@dimen/dp_12"
                            android:background="@drawable/solid_shape"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/id_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="客户姓名"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_order_title"/>
                        <TextView
                            android:id="@+id/order_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="@id/id_user_name"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/id_user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="手机号码"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_user_name"/>
                        <TextView
                            android:id="@+id/order_detail_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="@id/id_user_phone"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/id_user_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="申请日期"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_user_phone"/>
                        <TextView
                            android:id="@+id/order_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="@id/id_user_date"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"

                        android:padding="@dimen/dp_15"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/order_detail_product_logo"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            app:cornerRadius="@dimen/dp_20"
                            android:scaleType="fitXY"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/order_detail_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="中信银行首刷版"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/order_detail_product_logo"
                            app:layout_constraintTop_toTopOf="@id/order_detail_product_logo"/>

                        <TextView
                            android:id="@+id/id_billing_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="结算规则"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/order_detail_product_name"/>
                        <TextView
                            android:id="@+id/order_detail_billing_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="@id/id_billing_rule"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/id_billing_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="结算方式"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_billing_rule"/>
                        <TextView
                            android:id="@+id/order_detail_billing_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="@id/id_billing_method"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:padding="@dimen/dp_15"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/id_order_billing_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结算进度"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/id_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="数据更新至"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_order_billing_process"/>
                        <TextView
                            android:id="@+id/order_detail_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/orange_tip"
                            app:layout_constraintTop_toTopOf="@id/id_update_time"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/id_next_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="下次更新在"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_update_time"/>
                        <TextView
                            android:id="@+id/order_detail_next_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/orange_tip"
                            app:layout_constraintTop_toTopOf="@id/id_next_update_time"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/id_billing_tips"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="结算提醒"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_next_update_time"/>
                        <TextView
                            android:id="@+id/order_detail_billing_tips"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/id_billing_tips"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/id_next_update_time"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/order_detail_state_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:padding="@dimen/dp_15"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/id_order_state_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单状态"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_0"
                            android:background="@color/divider"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_marginStart="@dimen/dp_3_5"
                            app:layout_constraintTop_toBottomOf="@id/id_order_state_title"
                            app:layout_constraintStart_toStartOf="@id/id_order_state_title"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <!--                    <include layout="@layout/item_state_order_detail"-->
                        <!--                        android:id="@+id/item_state_order_detail"-->
                        <!--                        android:layout_width="@dimen/dp_0"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_marginTop="@dimen/dp_5"-->
                        <!--                        app:layout_constraintStart_toStartOf="@id/id_order_state_title"-->
                        <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                        <!--                        app:layout_constraintTop_toBottomOf="@id/id_order_state_title"/>-->
                        <!--                    <include layout="@layout/item_state_order_detail"-->
                        <!--                        android:id="@+id/item_state_order_detail2"-->
                        <!--                        android:layout_width="@dimen/dp_0"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        app:layout_constraintStart_toStartOf="@id/id_order_state_title"-->
                        <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                        <!--                        app:layout_constraintTop_toBottomOf="@id/item_state_order_detail"/>-->

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/order_detail_state_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="4"
                            android:layout_marginTop="@dimen/dp_15"
                            app:layout_constraintTop_toBottomOf="@id/id_order_state_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/order_detail_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/order_detail_refreshLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/solid_shape"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="对此订单仍有疑问？联系客服"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>