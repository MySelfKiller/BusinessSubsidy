<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_180"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/gonggao_bg_white_shape3">

        <TextView
            android:id="@+id/id_tag_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="筛选"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />

        <TextView
            android:id="@+id/date_picker_a_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/solid_shape"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_4"
            android:text="近一周"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_tag_date_title" />

        <TextView
            android:id="@+id/date_picker_a_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/solid_shape"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_4"
            android:text="近一月"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_tag_date_title" />

        <TextView
            android:id="@+id/date_picker_three_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/solid_shape"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_4"
            android:text="近三月"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_picker_a_week" />

        <TextView
            android:id="@+id/date_picker_half_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/solid_shape"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_4"
            android:text="近半年"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_picker_a_week" />

        <TextView
            android:id="@+id/date_picker_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/solid_shape"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_4"
            android:text="全部"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_picker_three_month" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/date_picker_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/blue_bg_shape3"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="@dimen/dp_6"
            android:paddingHorizontal="@dimen/dp_35"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
