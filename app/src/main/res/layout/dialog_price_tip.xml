<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_30"
    android:gravity="center">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="@dimen/dp_300"
     android:layout_height="wrap_content"
     android:background="@drawable/white_bg_shape">

     <View
         android:layout_width="@dimen/dp_60"
         android:layout_height="@dimen/dp_1"
         android:background="@color/divider"
         android:layout_marginEnd="@dimen/dp_15"
         app:layout_constraintEnd_toStartOf="@id/id_price_tip_title"
         app:layout_constraintTop_toTopOf="@id/id_price_tip_title"
         app:layout_constraintBottom_toBottomOf="@id/id_price_tip_title"/>
     <View
         android:layout_width="@dimen/dp_60"
         android:layout_height="@dimen/dp_1"
         android:background="@color/divider"
         android:layout_marginStart="@dimen/dp_15"
         app:layout_constraintStart_toEndOf="@id/id_price_tip_title"
         app:layout_constraintTop_toTopOf="@id/id_price_tip_title"
         app:layout_constraintBottom_toBottomOf="@id/id_price_tip_title"/>
     <TextView
         android:id="@+id/id_price_tip_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingVertical="@dimen/dp_12"
         android:textColor="@color/colorAccent"
         android:textStyle="normal"
         android:text="温馨提示"
         android:textSize="@dimen/sp_16"
         android:layout_marginTop="@dimen/dp_20"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>


     <TextView
         android:id="@+id/price_tip_context"
         android:layout_width="@dimen/dp_0"
         android:layout_height="wrap_content"
         android:text="修改团队结算价系统按照百分比计算"
         android:paddingHorizontal="@dimen/dp_20"
         android:paddingVertical="@dimen/dp_2"
         android:layout_marginTop="@dimen/dp_10"
         android:textSize="@dimen/sp_13"
         android:lineSpacingExtra="@dimen/dp_6"
         android:textColor="@color/grayText8"
         app:layout_constraintTop_toBottomOf="@id/id_price_tip_title"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>


     <View
         android:id="@+id/split_horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_0_5"
         android:layout_marginTop="@dimen/dp_30"
         android:background="@color/dialogSplitIOSLight"
         app:layout_constraintTop_toBottomOf="@id/price_tip_context"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/price_tip_cancel_btn"/>
     <View
         android:id="@+id/split_vertical2"
         android:layout_width="@dimen/dp_0_5"
         android:layout_height="@dimen/dp_0"
         android:background="@color/dialogSplitIOSLight"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="@id/price_tip_cancel_btn"
         app:layout_constraintBottom_toBottomOf="@id/price_tip_cancel_btn"/>

     <TextView
         android:id="@+id/price_tip_cancel_btn"
         android:layout_width="@dimen/dp_0"
         android:layout_height="@dimen/dp_50"
         android:layout_weight="1"
         android:background="@drawable/button_dialog_ios_left_light"
         android:gravity="center"
         android:text="取消"
         android:textColor="@color/grayText2"
         android:textSize="@dimen/sp_16"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/price_tip_ok_btn"
         app:layout_constraintBottom_toBottomOf="parent"
         />

     <TextView
         android:id="@+id/price_tip_ok_btn"
         android:layout_width="@dimen/dp_0"
         android:layout_height="@dimen/dp_50"
         android:layout_weight="1"
         android:background="@drawable/button_dialog_ios_right_light"
         android:gravity="center"
         android:text="确定"
         android:textColor="@color/colorAccent"
         android:textSize="@dimen/sp_16"
         app:layout_constraintStart_toEndOf="@id/price_tip_cancel_btn"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent" />
 </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>