<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/white"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_tag_location_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_tag_location"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ic_location"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/home_location_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位中..."
            android:textStyle="bold"
            android:textColor="@color/black1"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toEndOf="@id/id_tag_location"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/solid_search_shape"
            app:layout_constraintStart_toEndOf="@id/home_location_city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/home_msg_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="@dimen/dp_14"
                android:paddingHorizontal="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_5"
                android:textColor="@color/yellow1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <com.hoom.library.textbanner.TextBannerView
                android:id="@+id/home_hostTextBanner"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:setSingleLine="true"
                app:setTextColor="@color/black1"
                app:setTextSize="@dimen/sp_14"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout

        android:id="@+id/home_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:srlAccentColor="@color/black"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlPrimaryColor="@color/transparent" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/home_smart_bannercard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_6"
                    android:elevation="@dimen/dp_0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.youth.banner.Banner
                        android:id="@+id/home_smart_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:focusable="true" />
                </androidx.cardview.widget.CardView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/id_home_product_label_lay"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_smart_bannercard"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/home_product_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:text="推广办卡"
                        android:paddingVertical="@dimen/dp_10"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:textColor="@color/black1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.flyco.tablayout.SlidingTabLayout
                        android:id="@+id/home_tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        app:tl_iconVisible="false"
                        android:layout_marginHorizontal="@dimen/dp_6"
                        app:tl_tab_backgroundVisible="true"
                        app:tl_textsize="@dimen/sp_14"
                        app:tl_textBold="NONE"
                        app:tl_tab_width="@dimen/dp_70"
                        app:tl_textSelectColor="@color/black1"
                        app:tl_textUnselectColor="#AA363636"
                        app:tl_indicator_color="#b0b9ca"
                        app:tl_indicator_color2="#e8e8e8"
                        app:tl_indicator_corner_radius="@dimen/dp_4"
                        app:tl_indicator_margin_left="@dimen/dp_6"
                        app:tl_indicator_margin_right="@dimen/dp_6"
                        app:tl_indicator_style="BLOCK"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/home_product_title"/>
                    <androidx.viewpager.widget.ViewPager
                        android:background="@color/transparent"
                        android:id="@+id/home_vp"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/home_tab_layout"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_product_recycle_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_10"
                        android:overScrollMode="never"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/home_tab_layout"
                        app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>






