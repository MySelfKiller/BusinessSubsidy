<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.settlement.SettlementActivity">

    <include layout="@layout/titlebar_white"
        android:id="@+id/settlement_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_15"
        android:background="@drawable/blue_bg_shape2">
        <TextView
            android:id="@+id/id_settle_today_income"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="今日收益"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/id_settle_month_income"/>
        <TextView
            android:id="@+id/settle_today_income"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLength="20"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/sp_20"
            app:autoSizeMinTextSize="@dimen/sp_6"
            app:autoSizeTextType="uniform"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_settle_today_income"
            app:layout_constraintEnd_toStartOf="@id/settle_month_income"/>
        <TextView
            android:id="@+id/id_settle_month_income"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="当月收益"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/id_settle_today_income"
            app:layout_constraintEnd_toStartOf="@id/id_settle_last_month_income"/>
        <TextView
            android:id="@+id/settle_month_income"
            android:layout_width="@dimen/dp_0"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:text="0"
            android:maxLength="20"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/sp_20"
            app:autoSizeMinTextSize="@dimen/sp_6"
            app:autoSizeTextType="uniform"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/settle_today_income"
            app:layout_constraintStart_toEndOf="@id/settle_today_income"
            app:layout_constraintEnd_toStartOf="@id/settle_last_month_income"/>
        <TextView
            android:id="@+id/id_settle_last_month_income"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingEnd="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:gravity="end"
            android:text="上月收益"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/id_settle_month_income"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/settle_last_month_income"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:text="0"
            android:maxLength="20"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/sp_20"
            app:autoSizeMinTextSize="@dimen/sp_6"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/settle_today_income"
            app:layout_constraintStart_toEndOf="@id/settle_month_income"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_35"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/settle_today_income"
            app:layout_constraintEnd_toStartOf="@id/settle_month_income"/>
        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_35"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/settle_month_income"
            app:layout_constraintEnd_toStartOf="@id/settle_last_month_income"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_15"
        android:background="#f2f2f2">
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/settlement_list_ctl"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            app:tl_iconVisible="false"
            app:tl_textSelectColor="@color/black"
            app:tl_textUnselectColor="@color/grayText8"
            app:tl_indicator_color="@color/yellowf"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width="@dimen/dp_40"
            app:tl_textBold="SELECT"
            app:tl_indicator_height="@dimen/dp_8"
            app:tl_indicator_corner_radius="@dimen/dp_5"
            app:tl_textsize="@dimen/sp_18"/>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/settlement_list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>