<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/white1_bg_shape">

        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/item_team_user_photo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_44"
            app:cornerRadius="@dimen/dp_30"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/item_team_user_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toEndOf="@id/item_team_user_photo"
            app:layout_constraintEnd_toStartOf="@id/item_team_user_wechat_iv"
            app:layout_constraintTop_toTopOf="@id/item_team_user_photo"/>
        <TextView
            android:id="@+id/item_team_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐号："
            android:textColor="@color/grayText7"
            android:textSize="@dimen/sp_12"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/item_team_user_name"
            app:layout_constraintTop_toBottomOf="@id/item_team_user_name"/>
        <TextView
            android:id="@+id/item_team_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A0"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_marginStart="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/card_option3_bg_shape"
            app:layout_constraintStart_toEndOf="@id/item_team_user_id"
            app:layout_constraintTop_toTopOf="@id/item_team_user_id"
            app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_id"/>
        <ImageView
            android:id="@+id/item_team_user_wechat_iv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@mipmap/ic_wechat_tg"
            app:layout_constraintEnd_toStartOf="@id/item_team_user_phone_iv"
            app:layout_constraintTop_toTopOf="@id/item_team_user_phone_iv"/>
        <ImageView
            android:id="@+id/item_team_user_phone_iv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@mipmap/ic_phone_tg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_team_user_photo"
            app:layout_constraintBottom_toBottomOf="@id/item_team_user_photo"/>


        <View
            android:id="@+id/id_tag_item_hor_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/divider2"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/item_team_user_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/item_team_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_160"
            android:textColor="@color/grayText7"
            android:textSize="@dimen/sp_13"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="加入时间："
            android:layout_marginStart="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_tag_item_hor_line"/>

        <TextView
            android:id="@+id/item_team_user_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队业绩"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_12"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/solid_shape"
            app:layout_constraintTop_toTopOf="@id/item_team_user_time"
            app:layout_constraintBottom_toBottomOf="@id/item_team_user_time"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_team_user_achievement_lay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_team_user_time"
            android:background="#f4f4f4"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/id_tag_team_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代理人数："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:paddingStart="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_team_user_agent_num"
                app:layout_constraintEnd_toStartOf="@id/item_team_user_agent_num"
                app:layout_constraintBottom_toBottomOf="@id/item_team_user_agent_num"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_agent_num"/>
            <TextView
                android:id="@+id/item_team_user_agent_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintStart_toEndOf="@id/id_tag_team_per"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_agent_num"
                app:layout_constraintStart_toEndOf="@id/item_team_user_agent_num"
                app:layout_constraintTop_toTopOf="@id/item_team_user_agent_num"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月结算："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintTop_toTopOf="@id/item_team_user_settle_month"
                app:layout_constraintEnd_toStartOf="@id/item_team_user_settle_month"
                app:layout_constraintBottom_toBottomOf="@id/item_team_user_settle_month"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_settle_month"/>
            <TextView
                android:id="@+id/item_team_user_settle_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_settle_month"
                app:layout_constraintStart_toEndOf="@id/item_team_user_settle_month"
                app:layout_constraintTop_toTopOf="@id/item_team_user_settle_month"/>


            <TextView
                android:id="@+id/id_tag_team_team_ach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日结算："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:paddingStart="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_team_user_settle_yesterday"
                app:layout_constraintEnd_toStartOf="@id/item_team_user_settle_yesterday"
                app:layout_constraintBottom_toBottomOf="@id/item_team_user_settle_yesterday"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_settle_yesterday"/>
            <TextView
                android:id="@+id/item_team_user_settle_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintStart_toEndOf="@id/id_tag_team_team_ach"
                app:layout_constraintTop_toBottomOf="@id/item_team_user_agent_num"
                app:layout_constraintEnd_toStartOf="@id/id_tag_team_price"/>
            <TextView
                android:id="@+id/id_tag_team_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_settle_yesterday"
                app:layout_constraintStart_toEndOf="@id/item_team_user_settle_yesterday"
                app:layout_constraintTop_toTopOf="@id/item_team_user_settle_yesterday"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月业绩："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintEnd_toStartOf="@id/item_team_user_achievement_month"
                app:layout_constraintTop_toTopOf="@id/item_team_user_achievement_month"
                app:layout_constraintBottom_toBottomOf="@id/item_team_user_achievement_month"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_achievement_month"/>
            <TextView
                android:id="@+id/item_team_user_achievement_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_30"
                app:layout_constraintTop_toBottomOf="@id/item_team_user_agent_num"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_user_achievement_month"
                app:layout_constraintStart_toEndOf="@id/item_team_user_achievement_month"
                app:layout_constraintTop_toTopOf="@id/item_team_user_achievement_month"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
