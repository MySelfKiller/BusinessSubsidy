<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.CardDetailActivity">
    <include layout="@layout/titlebar_white"
        android:id="@+id/card_detail_title" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_tag_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20"
        android:background="@drawable/slight_blue_bg_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_detail_title">
        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/card_detail_logo"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            app:cornerRadius="@dimen/dp_25"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/detail_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="广发激活版"
            android:ellipsize="end"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toEndOf="@id/card_detail_logo"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/id_my_price"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="佣金"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@id/detail_my_price"
            app:layout_constraintStart_toStartOf="@id/detail_dialog_name"
            app:layout_constraintTop_toBottomOf="@id/detail_dialog_name"
            app:layout_constraintBottom_toBottomOf="@id/detail_my_price"/>
        <TextView
            android:id="@+id/id_my_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/id_my_price"
            app:layout_constraintBaseline_toBaselineOf="@id/detail_my_price"/>
        <TextView
            android:id="@+id/detail_my_price"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="200"
            android:maxLength="10"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@id/detail_dialog_name"
            app:layout_constraintStart_toEndOf="@id/id_my_unit"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_detail_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:paddingVertical="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/half_white_shape"
        app:layout_constraintTop_toTopOf="@id/id_tag_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_detail_ok_btn"/>
    <!--        <View-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="@dimen/dp_1"-->
    <!--            android:background="@color/divider"/>-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/card_detail_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginVertical="@dimen/dp_20"
        android:background="@drawable/blue_bg_shape2"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingVertical="@dimen/dp_12"
        android:text="生成推广二维码"
        android:textStyle="bold"
        android:textColor="@color/slight_yellow"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@id/card_detail_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>