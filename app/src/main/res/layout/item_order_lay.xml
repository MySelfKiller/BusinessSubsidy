<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        android:paddingHorizontal="@dimen/dp_15"
        android:background="@drawable/white1_bg_shape"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_10">
            <ImageView
                android:id="@+id/item_order_product_logo"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                app:cornerRadius="@dimen/dp_20"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_order_product"
                app:layout_constraintBottom_toBottomOf="@id/item_order_product"/>

            <TextView
                android:id="@+id/item_order_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:paddingVertical="@dimen/dp_4"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:layout_marginStart="@dimen/dp_5"
                app:layout_constraintStart_toEndOf="@id/item_order_product_logo"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/item_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8a8a8a"
                android:text="待确认"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_gry_1dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_1"
                android:background="@drawable/half_gry_shape"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/id_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户姓名"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/id_order_phone"/>

            <TextView
                android:id="@+id/id_current_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前状态"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/id_order_name"
                app:layout_constraintStart_toEndOf="@id/id_new_user"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/id_order_phone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/id_order_name"
                app:layout_constraintStart_toEndOf="@id/id_order_name"
                app:layout_constraintEnd_toStartOf="@id/id_new_user"/>

            <TextView
                android:id="@+id/id_new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否新户"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/id_order_name"
                app:layout_constraintEnd_toStartOf="@id/id_current_state"
                app:layout_constraintStart_toEndOf="@id/id_order_phone"/>


            <TextView
                android:id="@+id/item_order_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄敏"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/id_order_name"
                app:layout_constraintStart_toStartOf="@id/id_order_name"
                app:layout_constraintEnd_toEndOf="@+id/id_order_name"/>
            <TextView
                android:id="@+id/item_current_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="初审通过"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/item_order_user_name"
                app:layout_constraintStart_toStartOf="@id/id_current_state"
                app:layout_constraintEnd_toEndOf="@id/id_current_state"/>

            <TextView
                android:id="@+id/item_order_phone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:text="15101186046"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/item_order_user_name"
                app:layout_constraintStart_toStartOf="@id/id_order_phone"
                app:layout_constraintEnd_toEndOf="@id/id_order_phone"/>

            <TextView
                android:id="@+id/item_new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待更新"
                android:paddingVertical="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/item_order_user_name"
                app:layout_constraintStart_toStartOf="@id/id_new_user"
                app:layout_constraintEnd_toEndOf="@id/id_new_user"/>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@id/id_order_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_0"
                android:background="@color/divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_order_name"/>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_0"
                android:background="@color/divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_order_phone"/>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_0"
                android:background="@color/divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_new_user"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_10">
            <TextView
                android:id="@+id/item_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="2023-07-22 16:11:10"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/item_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单详情"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_3"
                android:paddingHorizontal="@dimen/dp_10"
                android:background="@drawable/solid_shape"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/item_order_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_3"
                android:paddingHorizontal="@dimen/dp_20"
                android:background="@drawable/solid_shape"
                android:layout_marginEnd="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/item_order_detail"
                app:layout_constraintEnd_toStartOf="@id/item_order_detail"
                app:layout_constraintBottom_toBottomOf="@id/item_order_detail"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
