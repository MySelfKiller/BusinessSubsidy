<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10"
        android:elevation="@dimen/dp_0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/white_bg_shape">
            <ImageView
                android:id="@+id/shared_bg_iv"
                android:layout_width="@dimen/dp_263"
                android:layout_height="@dimen/dp_285"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/shared_qrcode_iv"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_35"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="@id/shared_bg_iv"
                app:layout_constraintStart_toStartOf="@id/shared_bg_iv"
                app:layout_constraintEnd_toEndOf="@id/shared_bg_iv"/>
            <TextView
                android:id="@+id/shared_cancel_btn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="关闭"
                android:textColor="@color/black1"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/shared_bg_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/shared_confirm_btn"/>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_0"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@id/shared_bg_iv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/shared_cancel_btn"
                app:layout_constraintEnd_toStartOf="@id/shared_confirm_btn"/>
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/shared_confirm_btn"/>
            <TextView
                android:id="@+id/shared_confirm_btn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="保存二维码"
                android:textColor="@color/orange1"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/shared_bg_iv"
                app:layout_constraintStart_toEndOf="@id/shared_cancel_btn"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>