<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/white1_bg_shape"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_15"
            android:background="@drawable/card_option_bg_shape">
            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/item_modify_product_logo"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:scaleType="fitXY"
                app:cornerRadius="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_modify_product_name"
                app:layout_constraintBottom_toBottomOf="@id/item_modify_product_name"/>
            <TextView
                android:id="@+id/item_modify_product_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_modify_product_logo"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_10">
            <TextView
                android:id="@+id/id_my_price"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="我的结算价"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@id/item_modify_product_my_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_modify_product_my_price"
                app:layout_constraintBottom_toBottomOf="@id/item_modify_product_my_price"/>
            <TextView
                android:id="@+id/id_my_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/red_text"
                app:layout_constraintStart_toEndOf="@id/id_my_price"
                app:layout_constraintBaseline_toBaselineOf="@id/item_modify_product_my_price"/>
            <TextView
                android:id="@+id/item_modify_product_my_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/red_text"
                android:textStyle="bold"
                android:textSize="@dimen/sp_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_my_unit"/>

            <TextView
                android:id="@+id/id_team_price"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="团队结算价"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/item_modify_product_team_price"
                app:layout_constraintTop_toTopOf="@id/item_modify_product_team_price"
                app:layout_constraintBottom_toBottomOf="@id/item_modify_product_team_price"/>
            <TextView
                android:id="@+id/id_team_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/id_my_price"
                app:layout_constraintBaseline_toBaselineOf="@id/item_modify_product_team_price"/>
            <TextView
                android:id="@+id/item_modify_product_team_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp_20"
                app:layout_constraintTop_toBottomOf="@id/item_modify_product_my_price"
                app:layout_constraintStart_toEndOf="@id/id_team_unit"/>
            <TextView
                android:id="@+id/item_modify_product_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单独改价"
                android:textColor="@color/colorAccent"
                android:paddingHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_6"
                android:background="@drawable/small1_solid_shape"
                android:textSize="@dimen/sp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_modify_product_my_price"
                app:layout_constraintBottom_toBottomOf="@id/item_modify_product_team_price"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>
