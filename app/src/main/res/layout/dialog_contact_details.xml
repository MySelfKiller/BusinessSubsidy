<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_30"
    android:gravity="center">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="@dimen/dp_300"
     android:layout_height="wrap_content"
     android:background="@drawable/white_bg_shape">

     <TextView
         android:id="@+id/dialog_contact_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingVertical="@dimen/dp_12"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:textSize="@dimen/sp_16"
         android:layout_marginTop="@dimen/dp_10"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>

     <ImageView
         android:id="@+id/id_contact_phone"
         android:layout_width="@dimen/dp_25"
         android:layout_height="@dimen/dp_25"
         android:layout_marginStart="@dimen/dp_20"
         android:src="@mipmap/ic_contact_phone"
         app:layout_constraintTop_toTopOf="@id/dialog_contact_phone"
         app:layout_constraintBottom_toBottomOf="@id/dialog_contact_phone"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/dialog_contact_phone" />
     <TextView
         android:id="@+id/dialog_contact_phone"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:maxLength="20"
         android:ellipsize="end"
         android:maxLines="1"
         android:layout_marginTop="@dimen/dp_10"
         android:layout_marginStart="@dimen/dp_15"
         android:paddingVertical="@dimen/dp_10"
         android:textSize="@dimen/sp_16"
         android:textColor="@color/black1"
         app:layout_constraintTop_toBottomOf="@id/dialog_contact_name"
         app:layout_constraintStart_toEndOf="@id/id_contact_phone"/>
     <TextView
         android:id="@+id/dialog_contact_copy_phone"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="复制"
         android:textColor="@color/colorAccent"
         android:textSize="@dimen/sp_12"
         android:textStyle="bold"
         android:paddingHorizontal="@dimen/dp_15"
         android:paddingVertical="@dimen/dp_5"
         android:layout_marginEnd="@dimen/dp_20"
         android:background="@drawable/solid_shape"
         app:layout_constraintTop_toTopOf="@id/dialog_contact_phone"
         app:layout_constraintBottom_toBottomOf="@id/dialog_contact_phone"
         app:layout_constraintEnd_toEndOf="parent"/>
     <View
         android:id="@+id/id_tag_ver_line"
         android:layout_width="@dimen/dp_0"
         android:layout_height="@dimen/dp_0_5"
         android:background="@color/divider2"
         android:layout_marginTop="@dimen/dp_10"
         app:layout_constraintTop_toBottomOf="@id/dialog_contact_phone"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>

     <ImageView
         android:id="@+id/ic_contact_wechat"
         android:layout_width="@dimen/dp_25"
         android:layout_height="@dimen/dp_25"
         android:layout_marginStart="@dimen/dp_20"
         android:src="@mipmap/ic_contact_wechat"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/dialog_contact_wechat"
         app:layout_constraintTop_toTopOf="@id/dialog_contact_wechat"
         app:layout_constraintBottom_toBottomOf="@id/dialog_contact_wechat"/>
     <TextView
         android:id="@+id/dialog_contact_wechat"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_10"
         android:layout_marginBottom="@dimen/dp_15"
         android:layout_marginStart="@dimen/dp_15"
         android:paddingVertical="@dimen/dp_10"
         android:maxLength="20"
         android:ellipsize="end"
         android:maxLines="1"
         android:textSize="@dimen/sp_16"
         android:textColor="@color/black1"
         app:layout_constraintTop_toBottomOf="@id/id_tag_ver_line"
         app:layout_constraintStart_toEndOf="@id/ic_contact_wechat"
         app:layout_constraintBottom_toBottomOf="parent"/>

     <TextView
         android:id="@+id/dialog_contact_copy_wechat"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="复制"
         android:textColor="@color/colorAccent"
         android:textSize="@dimen/sp_12"
         android:textStyle="bold"
         android:paddingHorizontal="@dimen/dp_15"
         android:paddingVertical="@dimen/dp_5"
         android:layout_marginEnd="@dimen/dp_20"
         android:background="@drawable/solid_shape"
         app:layout_constraintTop_toTopOf="@id/dialog_contact_wechat"
         app:layout_constraintBottom_toBottomOf="@id/dialog_contact_wechat"
         app:layout_constraintEnd_toEndOf="parent"/>
 </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>