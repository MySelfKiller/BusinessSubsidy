                android:text="2023-08-18 16:22:22"
                android:textColor="@color/grayText7"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@id/id_item_record_time"
                app:layout_constraintTop_toTopOf="@id/id_item_record_time"
                app:layout_constraintBottom_toBottomOf="@id/id_item_record_time"/>
