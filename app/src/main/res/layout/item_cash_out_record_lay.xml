                android:textColor="@color/orange_tip"
                android:paddingVertical="@dimen/dp_4"
                android:paddingHorizontal="@dimen/dp_14"
                android:background="@drawable/solid_orange_shape"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/id_item_record_username"
                android:layout_width="wrap_content"
                android:text="提现姓名："
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_record_username"
                android:layout_width="wrap_content"
                android:text="挣来"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_item_record_username"/>
            <TextView
                android:id="@+id/id_item_record_bank_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                android:text="银行名称："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/id_item_record_username"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_record_bank_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                android:text="交通银行（8766）"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="@id/id_item_record_bank_account"
                app:layout_constraintBottom_toBottomOf="@id/id_item_record_bank_account"
                app:layout_constraintStart_toEndOf="@id/id_item_record_bank_account"/>
            <TextView
                android:id="@+id/item_record_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_3"
                android:text="提现金额：86元"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/id_item_record_bank_account"
                app:layout_constraintStart_toStartOf="parent"/>
