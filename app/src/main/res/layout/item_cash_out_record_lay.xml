            <LinearLayout
                android:id="@+id/settle_arrive_amount_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/item_record_amount"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/id_item_settle_arrive_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingVertical="@dimen/dp_3"
                    android:text="到账金额："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toBottomOf="@id/id_item_record_bank_account"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/item_settle_arrive_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingVertical="@dimen/dp_3"
