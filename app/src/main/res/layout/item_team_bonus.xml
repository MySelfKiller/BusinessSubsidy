<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/white1_bg_shape">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20">

            <TextView
                android:id="@+id/item_bonus_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队成员：高尚"
                android:paddingVertical="@dimen/dp_14"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/item_bonus_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/grayText"
                android:text="2022-12-12 18:03:22"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_20">
            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/item_bonus_product_logo"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                app:cornerRadius="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_bonus_product_name"
                app:layout_constraintBottom_toBottomOf="@id/item_bonus_product_name"/>
            <TextView
                android:id="@+id/item_bonus_product_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_20"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="浦发初审版"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_bonus_product_logo"/>
            <TextView
                android:id="@+id/id_my_price"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="分红："
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/id_my_unit"
                app:layout_constraintBaseline_toBaselineOf="@id/item_bonus_amount"/>
            <TextView
                android:id="@+id/id_my_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textStyle="bold"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/red_text"
                app:layout_constraintEnd_toStartOf="@id/item_bonus_amount"
                app:layout_constraintBaseline_toBaselineOf="@id/item_bonus_amount"/>
            <TextView
                android:id="@+id/item_bonus_amount"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="45.00"
                android:maxLines="1"
                android:maxLength="10"
                android:textStyle="bold"
                android:textColor="@color/red_text"
                android:textSize="@dimen/sp_18"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>