<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <LinearLayout
        android:id="@+id/item_product_lay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/white1_bg_shape"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_8">
            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/item_pro_icon"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                app:cornerRadius="@dimen/dp_20"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/item_pro_name"
                android:layout_width="@dimen/dp_0"
                android:textColor="@color/grayText"
                android:layout_height="@dimen/dp_38"
                android:gravity="center"
                android:textStyle="bold"
                android:maxLines="2"
                app:autoSizeMaxTextSize="@dimen/sp_14"
                app:autoSizeMinTextSize="@dimen/sp_6"
                app:autoSizeTextType="uniform"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/item_pro_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/item_settle_cycle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_pro_name"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/card_option_bg_shape"
            android:paddingVertical="@dimen/dp_6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/item_pro_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="@dimen/sp_13"
                app:autoSizeMaxTextSize="@dimen/sp_13"
                app:autoSizeMinTextSize="@dimen/sp_6"
                app:autoSizeTextType="uniform"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>
</layout>
