<?xml version="1.0" encoding="utf-8"?>

<com.scwang.smart.refresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mine.MineFragment">

    <com.scwang.smart.refresh.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        app:srlAccentColor="@color/black"
        app:srlClassicsSpinnerStyle="FixedBehind"
        app:srlPrimaryColor="@color/transparent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f1f3">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f1f3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:background="@mipmap/ic_mine_background"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingTop="@dimen/dp_60"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.rishabhharit.roundedimageview.RoundedImageView
                    android:id="@+id/mine_user_photo"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    app:cornerRadius="@dimen/dp_30"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/mine_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:maxLength="20"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/mine_user_photo"
                    app:layout_constraintTop_toTopOf="@id/mine_user_photo"/>
                <TextView
                    android:id="@+id/mine_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:maxLength="20"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/mine_user_photo"
                    app:layout_constraintTop_toBottomOf="@id/mine_user_name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_level_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_120"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                android:background="@drawable/mine_user_level_shape"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/user_agent_rank_icon"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/mine_user_level"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    app:layout_constraintStart_toEndOf="@id/user_agent_rank_icon"
                    app:layout_constraintTop_toTopOf="@id/user_agent_rank_icon"
                    app:layout_constraintBottom_toBottomOf="@id/user_agent_rank_icon"
                    app:layout_constraintEnd_toStartOf="@id/user_agent_level_describe"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/yellow2"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""/>

                <TextView
                    android:id="@+id/user_agent_level_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:layout_constraintStart_toEndOf="@id/mine_user_level"
                    app:layout_constraintTop_toTopOf="@id/user_agent_rank_icon"
                    app:layout_constraintBottom_toBottomOf="@id/user_agent_rank_icon"
                    app:layout_constraintEnd_toStartOf="@id/user_rank_detail"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/grayText5"
                    android:text=""/>
                <TextView
                    android:id="@+id/user_rank_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="详情"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textColor="#593910"
                    android:background="@drawable/solid_orange_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mine_user_info_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_50"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_10"
                android:background="@drawable/white_bg_shape"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/user_level_lay">
                <TextView
                    android:id="@+id/user_income_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收益"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/id_tag_all_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总收入（元）"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:maxLength="20"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_income_title"/>
                <TextView
                    android:id="@+id/mine_user_income_amount"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="0.00"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:maxWidth="@dimen/dp_130"
                    android:maxLines="1"
                    app:autoSizeMaxTextSize="@dimen/sp_20"
                    app:autoSizeMinTextSize="@dimen/sp_6"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/id_tag_all_income"/>
                <TextView
                    android:id="@+id/id_tag_cash_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可提取（元）"
                    android:layout_marginStart="@dimen/dp_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:maxLength="20"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/id_tag_all_income"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/id_tag_all_income"
                    app:layout_constraintBottom_toBottomOf="@id/id_tag_all_income"/>
                <TextView
                    android:id="@+id/mine_user_cash_out_amount"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:maxWidth="@dimen/dp_130"
                    android:maxLines="1"
                    app:autoSizeMaxTextSize="@dimen/sp_20"
                    app:autoSizeMinTextSize="@dimen/sp_6"
                    app:autoSizeTextType="uniform"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_constraintStart_toStartOf="@id/id_tag_cash_out"
                    app:layout_constraintTop_toBottomOf="@id/id_tag_cash_out"/>

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/forward2_light"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="@id/id_tag_cash_out"
                    app:layout_constraintEnd_toEndOf="parent"/>
<!--                <TextView-->
<!--                    android:id="@+id/mine_cash_out_btn"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="提现"-->
<!--                    android:paddingVertical="@dimen/dp_4"-->
<!--                    android:paddingHorizontal="@dimen/sp_13"-->
<!--                    android:layout_marginTop="@dimen/dp_5"-->
<!--                    android:textColor="@color/yellow1"-->
<!--                    android:textSize="@dimen/sp_12"-->
<!--                    android:maxLength="20"-->
<!--                    android:ellipsize="end"-->
<!--                    android:background="@drawable/solid_yellow_shape"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"/>-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/mine_team_recruit"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:src="@mipmap/ic_zhaomu_bg"
                android:background="@drawable/solid_white_shape"
                app:cornerRadius="@dimen/dp_6"
                app:layout_constraintTop_toBottomOf="@id/mine_user_info_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mine_my_team"/>
            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/mine_my_team"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/ic_my_team_bg"
                app:cornerRadius="@dimen/dp_6"
                android:background="@drawable/solid_white_shape"
                app:layout_constraintTop_toTopOf="@id/mine_team_recruit"
                app:layout_constraintStart_toEndOf="@id/mine_team_recruit"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mine_options_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_20"
                tools:itemCount="4"
                android:background="@drawable/solid_white_shape"
                app:layout_constraintTop_toBottomOf="@id/mine_team_recruit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>








</com.scwang.smart.refresh.layout.SmartRefreshLayout>