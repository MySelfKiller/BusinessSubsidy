<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".ui.login.LoginActivity">
    <!--<include layout="@layout/titlebar"/>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_70"
            android:src="@mipmap/login_logo_bg"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/dp_10"-->
<!--            android:text="您好！\n欢迎登录随手推卡"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/black1"-->
<!--            android:textSize="@dimen/sp_22"-->
<!--            app:layout_constraintTop_toBottomOf="@id/login_logo"-->
<!--            app:layout_constraintStart_toStartOf="@id/login_logo"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5"
        android:background="@drawable/slight_white_bg_shape">

        <ImageView
            android:id="@+id/id_tag_login_phone_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_login_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_number_edt"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="@color/grayText1"
            android:textColor="@color/black1"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toEndOf="@id/id_tag_login_phone_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5"
        android:background="@drawable/slight_white_bg_shape">

        <ImageView
            android:id="@+id/id_tag_login_pwd_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_login_pwd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_sms_code_edt"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="15"
            android:textSize="@dimen/sp_15"
            android:textColorHint="@color/grayText1"
            android:textColor="@color/black1"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@id/id_tag_login_pwd_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_send_sms_tv"/>

        <TextView
            android:id="@+id/login_send_sms_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_5"
            android:singleLine="true"
            android:text="获取验证码"
            android:textColor="@color/grayText1"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="@id/login_sms_code_edt"
            app:layout_constraintBottom_toBottomOf="@id/login_sms_code_edt"
            app:layout_constraintStart_toEndOf="@id/login_sms_code_edt"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_ask_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/gray_bg_shape"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingVertical="@dimen/dp_12"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/login_password_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:text="密码登录"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_14" />


    <LinearLayout
        android:id="@+id/login_sms_target_lay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_sms_target"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="验证码登录"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="忘记密码"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider"
            app:layout_constraintTop_toTopOf="@id/id_login_other_type"
            app:layout_constraintBottom_toBottomOf="@id/id_login_other_type"
            app:layout_constraintEnd_toStartOf="@id/id_login_other_type"/>
        <TextView
            android:id="@+id/id_login_other_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:text="第三方登录"
            android:textColor="@color/grayText"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider"
            app:layout_constraintStart_toEndOf="@id/id_login_other_type"
            app:layout_constraintTop_toTopOf="@id/id_login_other_type"
            app:layout_constraintBottom_toBottomOf="@id/id_login_other_type"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/login_wechat_login"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/ic_wechat_tg"/>



</LinearLayout>