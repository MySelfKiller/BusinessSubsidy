<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@drawable/white_bg_shape">

        <TextView
            android:id="@+id/item_team_subsidy_date"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_12"
            android:textColor="@color/slight_white4"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:background="@drawable/card_option2_bg_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/item_team_subsidy_amount"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="获得团队补贴：0元"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_12"
            android:textColor="@color/slight_white4"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/id_item_level_tg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级"
            android:textSize="@dimen/sp_14"
            android:paddingVertical="@dimen/dp_10"
            android:textColor="@color/grayText"
            app:layout_constraintTop_toBottomOf="@id/item_team_subsidy_date"
            app:layout_constraintEnd_toEndOf="@id/item_team_subsidy_level"
            app:layout_constraintStart_toStartOf="@id/item_team_subsidy_level" />
        <TextView
            android:id="@+id/id_item_team_total_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队总结算"
            android:textSize="@dimen/sp_14"
            android:paddingVertical="@dimen/dp_10"
            android:textColor="@color/grayText"
            app:layout_constraintTop_toBottomOf="@id/item_team_subsidy_date"
            app:layout_constraintStart_toStartOf="@id/item_team_total_sub_lay"
            app:layout_constraintEnd_toEndOf="@id/item_team_total_sub_lay"/>
        <TextView
            android:id="@+id/id_item_team_total_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队总业绩"
            android:textSize="@dimen/sp_14"
            android:paddingVertical="@dimen/dp_10"
            android:textColor="@color/grayText"
            app:layout_constraintTop_toBottomOf="@id/item_team_subsidy_date"
            app:layout_constraintStart_toStartOf="@id/id_item_team_total_per_lay"
            app:layout_constraintEnd_toEndOf="@id/id_item_team_total_per_lay"/>
        <TextView
            android:id="@+id/item_team_subsidy_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A0"
            android:textSize="@dimen/sp_20"
            android:paddingHorizontal="@dimen/dp_15"
            android:textStyle="bold"
            android:textColor="@color/yellow1"
            app:layout_constraintTop_toBottomOf="@id/id_item_level_tg"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/item_team_total_sub_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:minWidth="@dimen/dp_40"
            app:layout_constraintTop_toTopOf="@id/item_team_subsidy_level"
            app:layout_constraintBottom_toBottomOf="@id/item_team_subsidy_level"
            app:layout_constraintStart_toEndOf="@id/item_team_subsidy_level"
            app:layout_constraintEnd_toStartOf="@id/id_item_team_total_per_lay">
            <TextView
                android:id="@+id/item_team_subsidy_total_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/id_item_team_total_sub_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_subsidy_total_sub"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_item_team_total_per_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_80"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="@id/item_team_subsidy_level"
            app:layout_constraintBottom_toBottomOf="@id/item_team_subsidy_level"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/item_team_subsidy_total_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:minWidth="@dimen/dp_20"
                android:gravity="end"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/id_item_team_total_per_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/item_team_subsidy_total_per"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>