<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.mine.CashOutActivity">
    <include layout="@layout/titlebar_white"
        android:id="@+id/cash_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_cash_bank_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_15"
            android:paddingHorizontal="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/cash_change_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"
                android:paddingHorizontal="@dimen/dp_15"
                android:text="换卡"
                android:textColor="#828190"
                android:background="@drawable/solid_gry10_shape"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/id_cash_title_bg"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_12"
                android:src="@color/deep_black2"
                app:cornerRadius="@dimen/dp_2"
                app:roundedCorners="all"
                app:layout_constraintTop_toTopOf="@id/id_cash_title"
                app:layout_constraintBottom_toBottomOf="@id/id_cash_title"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/id_cash_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账银行卡"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/id_cash_title_bg"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cash_bank_info_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_cash_title">
                <ImageView
                    android:id="@+id/cash_bank_logo"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_5"
                    app:layout_constraintTop_toTopOf="@id/cash_bank_name"
                    app:layout_constraintBottom_toBottomOf="@id/cash_bank_name"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/cash_bank_name"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="clip_vertical"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/cash_bank_logo"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/cash_bank_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_5"
                    android:text=""
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@id/cash_bank_logo"
                    app:layout_constraintTop_toBottomOf="@id/cash_bank_name"/>
                <TextView
                    android:id="@+id/cash_bank_account"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="clip_vertical"
                    android:text=""
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/cash_bank_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cash_bank_username"
                    app:layout_constraintBottom_toBottomOf="@id/cash_bank_username"/>

                <TextView
                    android:id="@+id/cash_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="5分钟内到账"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toStartOf="@id/cash_bank_logo"
                    app:layout_constraintTop_toBottomOf="@id/cash_bank_account"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/cash_bind_card_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:visibility="gone"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/cash_bank_info_lay"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:id="@+id/cash_bind_card_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_8"
                    android:paddingHorizontal="@dimen/dp_40"
                    android:gravity="center"
                    android:background="@drawable/solid_shape">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_jia_bg"
                        android:layout_marginEnd="@dimen/dp_10"
                        app:tint="@color/colorAccent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="绑定银行卡"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/id_divider_gt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@color/divider4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_cash_bank_lay"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_cash_amount_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@id/id_divider_gt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/id_cash_title2_bg"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_12"
                android:src="@color/orange1"
                app:cornerRadius="@dimen/dp_2"
                app:roundedCorners="all"
                app:layout_constraintTop_toTopOf="@id/id_cash_title2"
                app:layout_constraintBottom_toBottomOf="@id/id_cash_title2"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/id_cash_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/id_cash_title2_bg"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/id_amount_lay"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/solid_gry1_shape"
                app:layout_constraintTop_toBottomOf="@id/id_cash_title2"
                app:layout_constraintStart_toStartOf="@id/id_cash_title2"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="￥"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28" />

                <EditText
                    android:id="@+id/cash_hav_amount_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_amount_tip"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/id_amount_lay"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/cash_out_amount"
                    android:padding="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/grayText"/>

                <TextView
                    android:id="@+id/cash_all_cash_out_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部提现"
                    android:padding="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cash_out_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/grayText"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_amount_tip" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/cash_ask_btn"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"
            android:text="确定"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/small_blue_bg_shape_def"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@id/id_cash_amount_lay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:gravity="center_vertical"-->
<!--            android:paddingTop="@dimen/dp_10"-->
<!--            android:paddingLeft="@dimen/dp_10"-->
<!--            android:paddingRight="@dimen/dp_10"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->



<!--        </LinearLayout>-->

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical">-->

<!--        </LinearLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>