<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.order.OrderFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:elevation="@dimen/dp_1"
        android:id="@+id/frag_title_root_lay"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/title_name_lay"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:paddingVertical="@dimen/dp_10"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end"
                android:text="订单"
                android:textStyle="bold"
                android:textColor="@color/black1"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/order_tab_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        app:tl_iconVisible="false"
        android:background="@drawable/solid_tab1_shape"
        app:tl_textSelectColor="@color/white"
        app:tl_textUnselectColor="@color/black"
        app:tl_indicator_color="#3F5060"
        app:tl_indicator_color_end="#9FABBD"
        app:tl_indicator_style="BLOCK"
        app:tl_textBold="NONE"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_margin_bottom="@dimen/dp_3"
        app:tl_indicator_margin_left="@dimen/dp_3"
        app:tl_indicator_margin_right="@dimen/dp_3"
        app:tl_indicator_margin_top="@dimen/dp_3"
        app:tl_indicator_height="@dimen/dp_39"
        app:tl_indicator_corner_radius="@dimen/dp_8"
        app:tl_textsize="@dimen/sp_16"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_tag_order_search"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_8"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/solid_search_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
<!--            <ImageView-->
<!--                android:id="@+id/id_tag_order_search_icon"-->
<!--                android:layout_width="@dimen/dp_15"-->
<!--                android:layout_height="@dimen/dp_15"-->
<!--                android:background="@mipmap/search"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toStartOf="@id/order_search_edt"/>-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/order_search_edt"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:background="@null"
                android:inputType="text"
                android:ellipsize="end"
                android:hint="请输入客户姓名/手机号搜索"
                android:textColorHint="@color/grayText"
                android:imeActionLabel="搜索"
                android:imeOptions="actionSearch"
                android:maxLength="20"
                android:maxLines="1"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/order_search_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />
            <ImageView
                android:id="@+id/order_search_delete"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@mipmap/ic_bg_close"
                app:layout_constraintStart_toEndOf="@id/order_search_edt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/order_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlPrimaryColor="@color/transparent"
            app:srlAccentColor="@color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
        </androidx.recyclerview.widget.RecyclerView>
        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlPrimaryColor="@color/transparent"
            app:srlAccentColor="@color/black"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>