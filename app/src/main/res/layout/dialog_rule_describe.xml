<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_white_bg_shape"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/id_tag_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_15"
            android:background="@drawable/mine_user_level_shape">
            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/rule_dialog_logo"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                app:cornerRadius="@dimen/dp_20"/>
            <TextView
                android:id="@+id/rule_dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_14"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_15"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rule_recycler"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/dp_1"-->
<!--            android:background="@color/divider"/>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rule_dialog_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_20"
            android:background="@drawable/blue_bg_shape3"
            android:gravity="center"
            android:minHeight="0dp"
            android:paddingVertical="@dimen/dp_12"
            android:text="生成推广二维码"
            android:textColor="@color/slight_yellow"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>