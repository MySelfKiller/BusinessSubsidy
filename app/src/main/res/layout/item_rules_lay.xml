<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/solid_gry5_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/item_rules_name"
            android:paddingVertical="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_1"
            android:text="支持城市"
            android:textColor="#41414d"
            android:background="@drawable/slight_gray_bg_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/item_rules_content"
            android:paddingVertical="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:paddingHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:text="全国有网点的城市均可办理"
            android:textColor="@color/black1"
            app:layout_constraintTop_toBottomOf="@id/item_rules_name"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
